    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                My secret
                <span class="d-block text-muted pt-2 font-size-sm">ສະແດງລາຍການ Apps(Secret)</span>
            </h3>
        </div>
        <div class="card-toolbar">

        </div>
    </div>
    <div class="card-body">
        <!--begin: Search Form-->
        <!--begin::Search Form-->
        <div class="mb-7">
            <div class="row align-items-center">
                <div class="col-lg-9 col-xl-8">

                </div>
            </div>
        </div>
        <!--end::Search Form-->
        <!--begin: Datatable-->
        <table class="table table-separate table-head-custom table-checkable" id="kt_datatable">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Expiration</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.type</td>
                            <td>@item.description</td>
                            <td>@item.expiration</td>
                            <td nowrap>

                                <a href="#" data-id="@item.Id" data-name="@item.description" data-rev="@item.Revision" class="btn btn-icon btn-light btn-hover-danger btn-sm delItem" title="Delete">
