@model IList<Shared.DTOs.ClientSecretDto>
@using Shared.DTOs
@{
    ViewData["Title"] = "My apps";
    ViewData["console"] = "active";
}
@section Styles{
    <link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" />
}

<!--begin::Card-->
